---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import ReadingTime from "@components/ReadingTime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr, default as slugify } from "@utils/slugify";
import { getReadingTime } from "@utils/getReadingTime";

export interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;

const { title, author, description, ogImage, canonicalURL, pubDatetime, tags } =
  post.data;

const { Content } = await post.render();
const readingTime = getReadingTime(post.body);

const ogImageUrl = typeof ogImage === "string" ? ogImage : ogImage?.src;
const ogUrl = new URL(
  ogImageUrl ?? `/posts/${slugify(post.data)}.png`,
  Astro.url.origin
).href;
---

<Layout
  title={title}
  author={author}
  description={description}
  ogImage={ogUrl}
  canonicalURL={canonicalURL}
>
  <Header />
  <div class="mx-auto flex w-full max-w-3xl justify-start px-2">
    <button
      class="focus-outline mb-2 mt-8 flex hover:opacity-75"
      onclick="history.back()"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
        ></path>
      </svg><span>Go back</span>
    </button>
  </div>
  <main id="main-content">
    <h1 transition:name={slugifyStr(title)} class="post-title">{title}</h1>
    <div class="flex flex-wrap items-center gap-4 my-2">
      <Datetime datetime={pubDatetime} size="lg" />
      <ReadingTime minutes={readingTime} size="lg" />
    </div>
    <article id="article" role="article" class="prose mx-auto mt-8 max-w-3xl">
      <Content />
    </article>

    <ul class="my-8">
      {tags.map(tag => <Tag name={slugifyStr(tag)} />)}
    </ul>
    <div class="flex justify-end">
      <button
        id="back-to-top"
        class="focus-outline whitespace-nowrap hover:opacity-75"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="rotate-90">
          <path
            d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
          ></path>
        </svg>
        <span>Back to Top</span>
      </button>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  .post-title {
    @apply text-2xl font-semibold text-skin-accent;
  }
  /* Scale Mermaid diagrams to article width instead of tiny default size */
  #article :global(.mermaid) {
    display: flex;
    justify-content: center;
    margin: 1.5rem 0;
  }
  #article :global(.mermaid svg) {
    max-width: 100%;
    width: 100%;
    height: auto;
    min-width: min(100%, 480px);
  }
  /* Light mode: override flowchart edge/link colors to grey for better visibility */
  html[data-theme="light"] #article :global(.mermaid .flowchart-link) {
    stroke: #666 !important;
  }
  html[data-theme="light"] #article :global(.mermaid .flowchart-link path) {
    stroke: #666 !important;
  }
  html[data-theme="light"] #article :global(.mermaid .arrowheadPath) {
    fill: #666 !important;
    stroke: #666 !important;
  }
  html[data-theme="light"] #article :global(.mermaid marker path) {
    fill: #666 !important;
    stroke: #666 !important;
  }
  /* Dark mode: ensure Mermaid diagrams have proper contrast */
  html[data-theme="dark"] #article :global([data-mermaid-wrapper]) {
    background: transparent;
  }
  html[data-theme="dark"] #article :global(.mermaid svg) {
    background: transparent;
  }
</style>

<script>
  import mermaid from "mermaid";

  function getTheme() {
    return document.documentElement.getAttribute("data-theme") === "dark"
      ? "dark"
      : "default";
  }

  function storeMermaidSources() {
    const container = document.querySelector("#article");
    if (!container) return;

    const mermaidElements = container.querySelectorAll("pre.mermaid");
    mermaidElements.forEach((pre) => {
      // Wrap each pre.mermaid in a div and store the source
      if (!pre.parentElement?.hasAttribute("data-mermaid-wrapper")) {
        const wrapper = document.createElement("div");
        wrapper.setAttribute("data-mermaid-wrapper", "true");
        wrapper.setAttribute("data-mermaid-source", pre.textContent || "");
        pre.parentNode?.insertBefore(wrapper, pre);
        wrapper.appendChild(pre);
      }
    });
  }

  function restoreMermaidSources() {
    const container = document.querySelector("#article");
    if (!container) return;

    const wrappers = container.querySelectorAll("[data-mermaid-wrapper]");
    wrappers.forEach((wrapper) => {
      const source = wrapper.getAttribute("data-mermaid-source");
      if (source) {
        // Replace current content (SVG) with original pre.mermaid
        wrapper.innerHTML = `<pre class="mermaid">${source}</pre>`;
      }
    });
  }

  let initialized = false;
  function initializeMermaid() {
    if (!initialized) {
      mermaid.initialize({
        startOnLoad: false,
        theme: getTheme(),
        securityLevel: "loose",
        flowchart: { useMaxWidth: true },
        sequence: { useMaxWidth: true },
        themeVariables: {
          fontSize: "16px",
          fontFamily: "arial, sans-serif",
        },
      });
      initialized = true;
    } else {
      // Update theme if already initialized
      mermaid.initialize({
        startOnLoad: false,
        theme: getTheme(),
        securityLevel: "loose",
        flowchart: { useMaxWidth: true },
        sequence: { useMaxWidth: true },
        themeVariables: {
          fontSize: "16px",
          fontFamily: "arial, sans-serif",
        },
      });
    }
  }

  function runMermaid() {
    const container = document.querySelector("#article");
    if (!container) return;

    // Store sources before first run
    storeMermaidSources();

    initializeMermaid();

    const mermaidElements = container.querySelectorAll("pre.mermaid");
    if (mermaidElements.length > 0) {
      mermaid.run({ nodes: mermaidElements });
    }
  }

  function runMermaidWithThemeChange() {
    // Restore original sources, then re-run with new theme
    restoreMermaidSources();
    runMermaid();
  }

  // Initial run
  runMermaid();

  // Re-run on page load (view transitions)
  document.addEventListener("astro:page-load", runMermaid);

  // Watch for theme changes
  const themeObserver = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (
        mutation.type === "attributes" &&
        mutation.attributeName === "data-theme"
      ) {
        runMermaidWithThemeChange();
      }
    });
  });

  themeObserver.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ["data-theme"],
  });
</script>
<script is:inline>
  /* When the user clicks on the "Back to Top" button,
   * scroll to the top of the document */
  document.querySelector("#back-to-top")?.addEventListener("click", () => {
    document.body.scrollTop = 0; // For Safari
    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
  });
</script>
