---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import ReadingTime from "@components/ReadingTime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr, default as slugify } from "@utils/slugify";
import { getReadingTime } from "@utils/getReadingTime";

export interface Props {
  book: CollectionEntry<"book">;
}

const { book } = Astro.props;

const { title, description, ogImage, canonicalURL, pubDatetime, tags, bookAuthor, rating, status, genre, isbn } = book.data;

const { Content } = await book.render();
const readingTime = getReadingTime(book.body);

const ogImageUrl = typeof ogImage === "string" ? ogImage : ogImage?.src;
const ogUrl = new URL(
  ogImageUrl ?? `/books/${slugify(book.data)}.png`,
  Astro.url.origin
).href;

const getRatingStars = (rating: number) => {
  return "★".repeat(rating) + "☆".repeat(5 - rating);
};
---

<Layout
  title={title}
  description={description}
  ogImage={ogUrl}
  canonicalURL={canonicalURL}
>
  <Header activeNav="books" />
  <div class="mx-auto flex w-full max-w-3xl justify-start px-2">
    <button
      class="focus-outline mb-2 mt-8 flex hover:opacity-75"
      onclick="history.back()"
    >
      <svg xmlns="http://www.w3.org/2000/svg">
        <path d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"></path>
      </svg>
      <span>Go back</span>
    </button>
  </div>
  <main id="main-content">
    <h1 transition:name={slugifyStr(title)} class="post-title">{title}</h1>
    <div class="flex flex-wrap items-center gap-4 my-2">
      <Datetime datetime={pubDatetime} size="lg" />
      <ReadingTime minutes={readingTime} size="lg" />
    </div>
    
    <div class="book-meta-info">
      <p class="book-author">By {bookAuthor}</p>
      {rating && (
        <div class="book-rating">
          <span class="stars">{getRatingStars(rating)}</span>
          <span class="rating-value">{rating}/5</span>
        </div>
      )}
      <div class="book-details">
        <span class="status">Status: {status}</span>
        {genre && (
          <span class="genre">Genres: {genre.join(", ")}</span>
        )}
        {isbn && (
          <span class="isbn">ISBN: {isbn}</span>
        )}
      </div>
    </div>

    <article id="article" role="article" class="prose mx-auto mt-8 max-w-3xl">
      <Content />
    </article>

    <ul class="my-8">
      {tags.map(tag => <Tag name={slugifyStr(tag)} />)}
    </ul>
    <div class="flex justify-end">
      <button
        id="back-to-top"
        class="focus-outline whitespace-nowrap hover:opacity-75"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="rotate-90">
          <path d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"></path>
        </svg>
        <span>Back to Top</span>
      </button>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-3xl px-4 pb-12;
  }
  .post-title {
    @apply text-2xl font-semibold text-skin-accent;
  }
  .book-meta-info {
    @apply mt-4 mb-8;
  }
  .book-author {
    @apply text-lg text-gray-600 dark:text-gray-400 mb-2;
  }
  .book-rating {
    @apply flex items-center gap-2 mb-4;
  }
  .stars {
    @apply text-yellow-500 text-lg;
  }
  .rating-value {
    @apply text-gray-600 dark:text-gray-400;
  }
  .book-details {
    @apply flex flex-wrap gap-4 text-sm;
  }
  .status, .genre, .isbn {
    @apply text-gray-600 dark:text-gray-400;
  }
</style>

<script is:inline>
  /* When the user clicks on the "Back to Top" button,
   * scroll to the top of the document */
  document.querySelector("#back-to-top")?.addEventListener("click", () => {
    document.body.scrollTop = 0; // For Safari
    document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
  });
</script> 